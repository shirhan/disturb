@model Disturb.Models.Product

@{
    ViewBag.Description = "Product - " + Model.Description;
 }
<h2>@Model.Description</h2>
<p>
    <img alt="@Model.Description" src="@Model.PicUrl" />
</p>
<div id="product-details">
    <p>
        <em>Category:</em>
        @Model.Category.Name
    </p>
    <p>
        <em>Brand:</em>
        @Model.Brand.Name
    </p>
    <p>
        <em>Price:</em>
        @String.Format("{0:F}", Model.Price)
    </p>
    <p class="button">
        @Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = Model.Id }, "")
    </p>
</div>

